{
    "name": "schenke-io/laravel-relationship-manager",
    "description": "Allow to plan, design and test model relationships in Laravel",
    "keywords": [
        "schenke-io",
        "laravel",
        "laravel-relationship-manager"
    ],
    "homepage": "https://github.com/schenke-io/laravel-relationship-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "K.-U. Schenke"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.20",
        "nette/php-generator": "^4.0",
        "spatie/laravel-data": "^3.8.1",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.5",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "SchenkeIo\\LaravelRelationshipManager\\": "src/"
        },
        "files": [
            "src/global.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SchenkeIo\\LaravelRelationshipManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "pint": "vendor/bin/pint",
        "write-class": "SchenkeIo\\LaravelRelationshipManager\\ComposerWriteFilesCommand::run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
